@{
    ViewData["Title"] = "Gestisci Prenotazioni";
}
@using ASPNETIdentityManager.Entities
@inject ASPNETIdentityManager.Contexts.PrenotazioneDBContext prenotazioneDBContext
@model ASPNETIdentityManager.Models.PrenotazioneModel

<div class="text-center">
    <form asp-action="Prenotazioni" asp-controller="Home" method="get">
        <div class="container">
            <div class="row">
                <div class="h1 col-12" style="padding-bottom: 50px">Gestisci Prenotazioni</div>
                
                <div class="col-4">
                    <div class="form-group">
                        <label>UserName</label>
                        <input name="userName" class="form-control" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Email</label>
                        <input name="email" class="form-control" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <br />
                        <input type="submit" class="btn btn-primary" value="Search" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    
    <div class="container">
        @foreach (Prenotazione prenotazione in Model.Prenotazione)
        {
            <div class="row">
                <div class="col-12" style="text-align:left">
                    <h3>@prenotazione.UserName</h3>
                    
                    <br />
                </div>
            </div>
           
        }
        <div class="row">
            <div class="col-12">
                <button id="CreateUserButton" class="btn btn-success btn-sm" onclick="showConfirmationModalForUsers('@Url.Action("CreateUser", "Home")', { addOrDelete:'Add' });">Create User</button>
            </div>
        </div>
    </div>
</div>